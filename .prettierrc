{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "endOfLine": "lf",
  "arrowParens": "avoid",
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.mdx",
      "options": {
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "ignore",
        "embeddedLanguageFormatting": "off"
      }
    }
  ]
}
